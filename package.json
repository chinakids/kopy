{
  "name": "kopy",
  "version": "6.1.0",
  "description": "Gracefully copy a directory and render templates.",
  "license": "MIT",
  "repository": "egoist/kopy",
  "author": {
    "name": "EGOIST",
    "email": "0x142857@gmail.com",
    "url": "github.com/egoist"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "NODE_ENV=test ava && xo && rm -rf test/dest && npm run build",
    "build": "bili --js babel",
    "example": "npm run build && mkdir -p dist-example && cd dist-example && node ../example.js"
  },
  "watch": {
    "./src": [
      "build"
    ]
  },
  "files": [
    "dist"
  ],
  "main": "dist/kopy.common.js",
  "keywords": [
    "copy",
    "dir",
    "folder"
  ],
  "devDependencies": {
    "ava": "latest",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-2": "^6.18.0",
    "bili": "^0.14.2",
    "ejs": "^2.5.5",
    "eslint-config-rem": "^3.0.1",
    "jstransformer-handlebars": "^1.0.0",
    "rimraf": "^2.5.4",
    "rollup-plugin-babel": "^2.7.1",
    "xo": "^0.18.1"
  },
  "dependencies": {
    "inquirer": "^3.0.6",
    "is-binary-path": "^2.0.0",
    "jstransformer": "^1.0.0",
    "jstransformer-ejs": "^0.0.3",
    "majo": "^0.2.3",
    "metalsmith": "^2.2.0",
    "minimatch": "^3.0.3",
    "multimatch": "^2.1.0",
    "path-exists": "^3.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "xo": {
    "extends": "rem",
    "rules": {
      "guard-for-in": 0
    }
  }
}
